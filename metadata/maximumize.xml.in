<?xml version="1.0"?>
<compiz>
  <plugin name="maximumize" useBcop="true">
    <_short>Maximumize</_short>
	<_long>Maximumizes windows (resize them to fit the available screenspace).</_long>
	<category>Window Management</category>
    <display>
      <option name="ignore_sticky" type="bool">
         <_short>Ignore sticky windows in the calculations</_short>
	 <_long>Treat sticky windows as non-existant when calculating space to use for the maximumize window.</_long>
         <default>true</default>
      </option>
      <option name="ignore_overlapping" type="bool">
         <_short>Ignore already overlapping windows in the calculations</_short>
	 <_long>Treat windows that are already overlapping with the current window as non-existant when calculating space to use for the maximumize window.</_long>
         <default>false</default>
      </option>
      <option name="maximumize_left" type="bool">
         <_short>Maximumize to left.</_short>
	 <_long>Expands the window on the left direction.</_long>
         <default>true</default>
      </option>
      <option name="maximumize_right" type="bool">
         <_short>Maximumize to right.</_short>
	 <_long>Expands the window on the right direction.</_long>
         <default>true</default>
      </option>
      <option name="maximumize_up" type="bool">
         <_short>Maximumize to up.</_short>
	 <_long>Expands the window on the up direction.</_long>
         <default>true</default>
      </option>
      <option name="maximumize_down" type="bool">
         <_short>Maximumize to down.</_short>
	 <_long>Expands the window on the down direction.</_long>
         <default>true</default>
      </option>

      <group>
        <_short>Bindings</_short>
        <option name="trigger_key" type="key">
          <_short>Trigger maximumize</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Begin</default>
        </option>
	<option name="trigger_left" type="key">
          <_short>Trigger left maximumize</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible to the left.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Left</default>
        </option>
	<option name="trigger_right" type="key">
          <_short>Trigger right maximumize</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible to the right.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Right</default>
        </option>
	<option name="trigger_up" type="key">
          <_short>Trigger up maximumize</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible to up.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Up</default>
        </option>
	<option name="trigger_down" type="key">
          <_short>Trigger down maximumize</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible to down.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Down</default>
        </option>
	<option name="trigger_horizontally" type="key">
          <_short>Trigger maximumize horizontally</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible horizontally.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Subtract</default>
        </option>
	<option name="trigger_vertically" type="key">
          <_short>Trigger maximumize vertically</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible vertically.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Divide</default>
        </option>
	<option name="trigger_up_left" type="key">
          <_short>Trigger maximumize upper left corner</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible in the upper left direction.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Home</default>
        </option>
	<option name="trigger_up_right" type="key">
          <_short>Trigger maximumize upper right corner</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible in the upper right direction.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Page_Up</default>
        </option>
	<option name="trigger_down_left" type="key">
          <_short>Trigger maximumize bottom left corner</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible in the bottom left direction.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_End</default>
        </option>
	<option name="trigger_down_right" type="key">
          <_short>Trigger maximumize bottom right corner</_short>
          <_long>Trigger a resize of the window currently focused so it fits as
	  much of the available screenspae as possible in the bottom right direction.</_long>
          <default>&lt;Super&gt;&lt;Shift&gt;KP_Page_Down</default>
        </option>
      </group>
    </display>
  </plugin>
</compiz>
